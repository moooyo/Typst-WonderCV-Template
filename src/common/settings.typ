// =============================================================================
// 简历模板配置文件
// =============================================================================
// 集中管理所有样式配置，便于统一调整和主题切换
// 修改此文件中的配置即可全局调整简历样式，无需修改模板文件

#let settings = (
  // ==========================================================================
  // 页面配置 - Page Configuration
  // ==========================================================================
  page: (
    // 页面边距设置
    margin-x: 0.9cm,          // 左右边距
    margin-y: 1.0cm,          // 上下边距
  ),
  
  // ==========================================================================
  // 段落配置 - Paragraph Configuration  
  // ==========================================================================
  paragraph: (
    // 段落对齐方式
    justify: true,            // 是否两端对齐
  ),
  
  // ==========================================================================
  // 字体配置 - Font Configuration
  // ==========================================================================
  fonts: (
    // 中文字体 - 使用兰亭黑（思源黑体 SC）
    chinese: ("Source Han Sans SC",),
    // 英文字体 - 使用Inter字体
    english: ("Inter",),
  ),
  
  // ==========================================================================
  // 字号配置 - Font Size Configuration
  // ==========================================================================
  font-sizes: (
    base: 10pt,               // 基础字体大小
    name: 15pt,               // 姓名标题字号
    description: 8pt,         // 描述文字字号，使内容更紧凑
    section-heading: 9pt,     // 章节标题字号（工作经历、项目经历等）
    sub-heading: 8pt,         // 子标题字号（公司名称、项目名称等）
  ),
  
  // ==========================================================================
  // 颜色配置 - Color Configuration
  // ==========================================================================
  colors: (
    // 主要文本颜色 - 进一步加深重要信息的黑度
    text-dark: black,                     // 纯黑色（用于姓名标题、章节标题、项目名称）
    text-medium: black,                   // 改为纯黑色（用于公司名称、学校名称）
    text-light: color.rgb(50, 50, 50),    // 深灰色（用于正文内容和描述）
    
    // 主题色配置 - 更明显的层次区分
    cv-color: color.rgb(70, 70, 70),      // 中灰色（用于分割线）
    accent: color.rgb(20, 20, 20),        // 很深灰强调色（用于重点突出）
    
    // 辅助颜色 - 更淡的颜色用于次要信息
    gray: color.rgb(120, 120, 120),       // 浅灰色（用于分隔符和日期地点）
    separator: color.rgb(150, 150, 150),  // 更浅的分隔符颜色
  ),
  
  // ==========================================================================
  // 布局配置 - Layout Configuration
  // ==========================================================================
  layout: (
    // 网格布局配置 - 简化布局定义
    grid-columns: (
      // 两列布局：左对齐内容，右对齐日期
      two-column: (1fr, auto),
      // 三列布局（保留扩展性）
      three-column: (1fr, 1fr, 1fr),
    ),
  ),
  
  // ==========================================================================
  // 间距配置 - Spacing Configuration
  // ==========================================================================
  spacing: (
    // 分割线相关间距
    line-top: -8pt,           // 分割线上方间距
    line-bottom: -2pt,        // 分割线下方间距
    
    // 标题间距
    heading-bottom: 5pt,      // 一级标题下方间距
    
    // 章节和分项间距
    item-spacing: 0pt,        // 分项内部元素间距
    section-item-spacing: 0pt, // 不同分项之间的间距
    
    // 网格布局间距
    grid-row-spacing: -3pt,   // grid行之间的间距调整
    
    // 垂直间距预设值
    v-small: 2pt,             // 小间距
    v-medium: 5pt,            // 中等间距
    v-large: 10pt,            // 大间距
    
    // 水平间距预设值
    h-small: 2pt,             // 小间距
    h-medium: 5pt,            // 中等间距
    h-large: 10pt,            // 大间距
  ),
  
  // ==========================================================================
  // 线条配置 - Line Configuration
  // ==========================================================================
  lines: (
    // 分割线样式
    stroke-width: 1pt,        // 分割线粗细
    length: 100%,             // 分割线长度
  ),
  
  // ==========================================================================
  // 联系信息配置 - Contact Configuration
  // ==========================================================================
  contact: (
    // 联系信息分隔符
    separator: " | ",         // 联系信息之间的分隔符
    
    // 微信标签配置
    wechat-label: (
      chinese: "微信: ",      // 中文微信标签
      english: "WeChat: ",    // 英文微信标签
    ),
  ),
  
  // ==========================================================================
  // 列表配置 - List Configuration
  // ==========================================================================
  list: (
    // 列表项目符号
    bullet: "•",              // 项目符号样式
    
    // 列表缩进
    indent: 1em,              // 列表项缩进距离
  ),
  
  // ==========================================================================
  // 调试配置 - Debug Configuration
  // ==========================================================================
  debug: (
    // 是否显示调试信息
    show-borders: false,      // 是否显示边框（用于调试布局）
    show-grid: false,         // 是否显示网格线（用于调试对齐）
  ),
)
